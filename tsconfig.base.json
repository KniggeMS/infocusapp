{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@repo/*": ["packages/*/src"],
      "@prisma/client": ["node_modules/@prisma/client/index.d.ts"]
    }
  }
}
