{
    "name": "infocus-app",
    "private": true,
    "scripts": {
        "build": "turbo run build --force",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "clean": "turbo run clean && rm -rf node_modules",
        "db:push": "turbo run generate && pnpm --filter db db:push"
    },
    "devDependencies": {
        "turbo": "latest",
        "prettier": "^3.1.0",
        "typescript": "^5.3.0"
    },
    "packageManager": "pnpm@8.15.0",
    "engines": {
        "node": ">=18"
    }
}